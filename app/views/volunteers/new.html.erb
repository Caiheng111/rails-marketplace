


<%=render 'errors/error', obj: @volunteer%>
<div class="section-volunteer">
  <div class="row ">
    <div class="col-md-6  mx-auto clear-padding-col clear-padding-row">
      <div class="image-volun">  
      </div>
      
    </div>
    <div class="col-md-6  mx-auto clear-col">
      <div class="vlounteer-info">
        <h2>Welcome To Good Giving</h2>
        
        <h3>To be a Volunteer Today! It takes only few steps</h3>
        
        <%= form_with(model: @volunteer, local: true) do |form| %>
         
            <div class="form-group">
                <%= form.label :name , class:'volun-lable'%><br />
                <%= form.text_field :name, autofocus: true, autocomplete: "Enter you name",class:"form-control",placeholder:"Please enter your name"  %>
              
            </div>

            <div class="field">
                <%= form.label :description , class:'volun-lable'%><br />
                <%= form.text_area :description, autofocus: true, autocomplete: "Description",class:"form-control",placeholder:"Please enter your description (min 10 words)"  %>
            </div>

            <div class="form-group">
                <%= form.label :Email , class:'volun-lable'%><br />
                <%= form.text_area :email, autofocus: true, autocomplete: "Email",class:"form-control",placeholder:"Please enter your email"  %>
            </div>

            <div class="form-group">
              <%= form.label :Skill , class:'volun-lable'%><br />
                <%= form.text_area :skill, autofocus: true, autocomplete: "Skill",class:"form-control",placeholder:"Please enter the skill information"  %>
            </div>
            <div class="form-group">
              <%= form.label :Location , class:'volun-lable'%><br />
                <%= form.text_field :location, autofocus: true, autocomplete: "Location",class:"form-control" ,placeholder:"Please enter your location" %>
            </div>
            <div class="form-group">
              <%= form.label :Experienxe , class:'volun-lable'%><br />
                <%= form.text_area :experienxe, autofocus: true, autocomplete: "Experienxe",class:"form-control" ,placeholder:"Please enter your working experience" %>
            </div>

             <div>
                <%= form.label :Photo %> <%= form.file_field :picture, accept:
                'image/png,image/gif,image/jpeg,image/jpg' %>
            </div>

            <div>
                <%= form.submit "Submit",class:'volunteer-create'%>
            </div>

        <% end %>

      </div>
    </div>    
  </div>
</div>




