



<h1>Projects listings</h1>
  <section>
		<div class="container">
     <div class="row">
        <% @charities.each do |charity| %>
              <div class="col-md-4  mx-auto">
              
                <% charity.pictures.each do |picture| %>
                    <%= image_tag picture, class:"show-image", class:"index-picture" %>
                    <% break %>
                <% end %>
           
                <div clas="infor">

                  <h1><%= charity.category.title%></h1>
                  <h3><%= charity.title %></h3>
                  <p><%= charity.summary %></p>

                  <div class="progress">
                    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                      <span class="sr-only">30% Complete (warning)</span>
                    </div>
                  </div>
                  <h3>Raised: $<%= charity.current_raised %></h3>
                  <h3>Raised: $<%= charity.raised_goal %></h3>
                  <%= link_to 'Edit', edit_charity_path(charity) %>
                  <%= link_to 'Delete', charity_path(charity), method: :delete %>
                </div>    
              </div>
          
          <%end%>
       </div>
		</div>
	</section>
 


