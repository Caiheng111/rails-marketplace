<h1>Projects listings</h1>

<ul class="nav nav-pills">
  <li>
    <%= form_tag charities_listings_path, :method=>'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "search" %>
    <% end %>
  </li>
  <li role="presentation" class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
      COUNTRY <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to 'India', charities_listings_path(location:"India") %></li>
      <li><%= link_to 'Kenya', charities_listings_path(location:"Kenya") %></li>
      <li><%= link_to 'Nepal', charities_listings_path(location:"Nepal") %></li>
      <li><%= link_to 'Mexico', charities_listings_path(location:"Mexico") %></li>
     
    </ul>
  </li>
  <li role="presentation" class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
      THEME <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li><%= link_to 'Women and Girls', charities_listings_path(category: Category.find(1)) %></li>
      <li><%= link_to 'Education', charities_listings_path(category: Category.find(2)) %></li>
      <li><%= link_to 'Health', charities_listings_path(category: Category.find(3)) %></li>
      <li><%= link_to 'Environment', charities_listings_path(category: Category.find(4)) %></li>
      <li><%= link_to 'Hunger', charities_listings_path(category: Category.find(5)) %></li>
      <li><%= link_to 'Economic Development', charities_listings_path(category: Category.find(6)) %></li>
    </ul>
  </li>


</ul>
  <section>
		<div class="container">
     <div class="row">
      <% if @charities !=nil %>
        <% @charities.each do |charity| %>
            <div class="col-md-4  mx-auto">
              <% charity.pictures.each do |picture| %>
                  <%= image_tag picture, class:"show-image", class:"index-picture" %>
                  <% break %>
              <% end %>
              <div clas="infor">

                <h1><%= charity.category.title%></h1>
                <h3><%= charity.title %></h3>
                <p><%= charity.summary.truncate(200) %></p>

                <div class="progress">
                  <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: <%=((charity.current_raised).to_f/(charity.raised_goal).to_f) *100.0%>%;">
                
                  </div>
                </div>
                <h3>Current Raised: $<%= charity.current_raised %></h3>
                <h3>Raise Goal: $<%= charity.raised_goal %></h3>
                
                <button><%= link_to 'Donate Now', charity_path(charity) %></button>
                <% if user_signed_in? && current_user.admin? %>
                  <button><%= link_to 'Delete', charity_path(charity), method: :delete %></button>
                  <button><%= link_to 'Edit', edit_charity_path(charity) %></button>
            
                <% end %>
              </div>    
            </div> 
          <%end%>
          <div>
            <%= will_paginate %>
          </div>
        
      <% else %>
        <div>
          <h1>4004</h1>
          <h1>Page you are looking is not found</h1>
        </div>
      <% end %>
		</div>
    
	</section>
 


