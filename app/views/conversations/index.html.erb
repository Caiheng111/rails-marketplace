

<div class="columns">

  <div class="column is-7">
    <h3 class="title is-3">Conversations</h3>
    <% @conversations.each do |conversation| %>
      <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% recipient = User.find(conversation.recipient_id) %>

        <% else %>
          <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <% unless current_user.id == recipient %>
          <div class="columns">
            <div class="column">
              <% if current_user.user_type='organization' %>
              <div class="inline-block"><%= link_to recipient.email, conversation_messages_path(conversation) %></div>
              <% elsif current_use.user_type='donor'%>
              <div class="inline-block"><%= link_to recipient.organization.title, conversation_messages_path(conversation) %></div>
             
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>